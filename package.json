{
  "name": "food-blog-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:docker": "vite --mode docker",
    "dev:compose": "vite --mode compose",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest --environment jsdom",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:file": "vitest run --coverage --file",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "lint:check": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "docker:build:frontend": "docker-compose --profile frontend --profile backend --profile db build frontend",
    "docker:build:backend": "docker-compose build backend",
    "docker:build:db": "docker-compose build db",
    "docker:build:all": "docker-compose build --parallel",
    "docker:up:frontend": "docker-compose --profile frontend up -d --no-deps --build --profile frontend frontend",
    "docker:down:frontend": "docker-compose down frontend",
    "docker:restart:frontend": "npm run docker:down:frontend && npm run docker:up:frontend",
    "docker:restart:full": "npm run docker:down:full && npm run docker:up:full"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "axios": "^1.9.0",
    "pinia": "^2.1.7",
    "typescript-eslint": "^8.32.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/vue": "^8.0.1",
    "@types/axios": "^0.9.36",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.15",
    "eslint": "^9.26.0",
    "eslint-plugin-vue": "^10.1.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  }
}